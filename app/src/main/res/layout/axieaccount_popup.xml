<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/todaySlp_textView"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginTop="36dp"
        android:text="Today's Slp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slpValue_Manager" />

    <TextView
        android:id="@+id/totalSlp_textView"
        android:layout_width="70dp"
        android:layout_height="29dp"
        android:layout_marginTop="44dp"
        android:text="TotalSlp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_showText" />

    <TextView
        android:id="@+id/managerSlp_textView"
        android:layout_width="75dp"
        android:layout_height="29dp"
        android:layout_marginTop="44dp"
        android:text="Scholar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_showText" />

    <TextView
        android:id="@+id/scholarSlp_textView"
        android:layout_width="75dp"
        android:layout_height="29dp"
        android:layout_marginTop="44dp"
        android:text="Manager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_showText" />

    <TextView
        android:id="@+id/address_showText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="ronin:"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address_textView"
        android:layout_width="56dp"
        android:layout_height="31dp"
        android:layout_marginTop="52dp"
        android:text="Address:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mmr_textView"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginTop="36dp"
        android:text="MMR:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slpValue_Scholar" />

    <TextView
        android:id="@+id/mmr_showText"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:text="Nan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mmr_textView" />

    <TextView
        android:id="@+id/totalSlp_showText"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:text="Nan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalSlp_textView" />


    <TextView
        android:id="@+id/managerSlp_showText"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:text="Nan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scholarSlp_textView" />

    <TextView
        android:id="@+id/scholarSlp_showText"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:text="Nan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/managerSlp_textView" />

    <TextView
        android:id="@+id/yesterdayslp_textView"
        android:layout_width="95dp"
        android:layout_height="32dp"
        android:layout_marginTop="36dp"
        android:text="Yesterday's Slp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slpValue_Total" />

    <TextView
        android:id="@+id/yesterdaySlp_showText"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:text="Nan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yesterdayslp_textView" />

    <TextView
        android:id="@+id/todaySlp_showText"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:text="Nan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todaySlp_textView" />

    <TextView
        android:id="@+id/slpValue_Total"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="₱"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalSlp_showText" />

    <TextView
        android:id="@+id/slpValue_Manager"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="₱"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/managerSlp_showText" />

    <TextView
        android:id="@+id/slpValue_Scholar"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="₱"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scholarSlp_showText" />

    <TextView
        android:id="@+id/slp_textValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SLP:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/slp_showValue"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="₱"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toEndOf="@+id/slp_textValue"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/closeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="CLOSE"
        android:textColor="@color/textcolor"
        android:backgroundTint="@color/buttonColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todaySlp_showText" />


</androidx.constraintlayout.widget.ConstraintLayout>